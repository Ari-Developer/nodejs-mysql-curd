<%- include ("partials/header") %>

<div class="jumbotron jumbotron-fluid">
    <div class="container text-center">
        <h3>Node - MySql CURD with Bootstrap 4</h3>
    </div>
</div>

<div class="container">
    <h3>All User List</h3>
    <div class="table-wrapper">
        <% if (userList.length > 0) {%>
            <table class="table table-hovered">
                <thead class="thead-dark">
                    <tr>
                        <th scope="col">ID</th>
                        <th scope="col">Name</th>
                        <th scope="col">Image</th>
                        <th scope="col">Email</th>
                        <th scope="col">Age</th>
                        <th scope="col">Action</th>
                    </tr>
                </thead>
                <tbody>
                    <% userList.forEach((user, index) => { %>
                        <tr>
                            <th scope="row"><%= user.id %></th>
                            <td><%= user.name %></td>
                            <td>
                                <% if(user.image != '') { %>
                                    <img src="/uploads/images/<%= user.image %>" style="width:60px; height:60px; border-radius:10px;">
                                <% } %>
                            </td>
                            <td><%= user.email %></td>
                            <td><%= user.age %></td>
                            <td>
                                <a href="/edit/<%= user.id %>" rel="noopener" class="btn btn-sm btn-success">Edit</a>
                                <a href="/delete/<%= user.id %>" class="btn btn-sm btn-danger" onclick="return confirm('Are you sure you want to delete this user record ?');">Delete</a>
                            </td>
                        </tr>
                    <% }) %>
                </tbody>
            </table>
        <% } else { %>
            <p class="text-center">No players found. Go <a href="/add" >here</a> to add players.</p>
        <% } %>
    </div>
</div>
<%- include ("partials/footer") %>